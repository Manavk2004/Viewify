generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id    Int     @id @default(autoincrement())
  email String  @unique
  name  String?
  posts Post[]
}

model Post {
  id        Int     @id @default(autoincrement())
  title     String
  content   String?
  published Boolean @default(false)
  authorId  Int
  author    User    @relation(fields: [authorId], references: [id])
}

enum theStatus {
  Active
  Draft
}

model Products {
  id             Int       @id
  title          String
  description    String
  status         theStatus
  price          String
  compareAtPrice Int
  Sku            String?
  trackInventory Boolean
  Inventory      String
  Category       String
  Tags           String?
  createdAt      DateTime  @default(now())
}
